<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/nombreVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RaÃºl Balbuena Baygorria"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/edadVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bautizado: "
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bautizadoVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anciano: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ancianoVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="true"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="SM: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/smVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="false"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Regular: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/precregVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="false"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearInformacion">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio Horas: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/horasVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Revi: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/reviVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Est: "
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/estVaron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/linearInformacion"
        android:layout_marginTop="11dp"
        android:background="@color/colorPrimary" />

</LinearLayout>