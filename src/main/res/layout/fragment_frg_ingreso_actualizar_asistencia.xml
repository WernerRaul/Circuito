<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.frgIngresoActualizarAsistencia">

    <Spinner
        android:id="@+id/spnCongregacionActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spnPublicador7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="ID"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="Mes"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="R.Entre Semana"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="R.Fin Semana"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerActualizacionAsistencia"
        android:layout_alignBottom="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>