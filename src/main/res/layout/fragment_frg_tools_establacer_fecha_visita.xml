<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.frgToolsEstablacerFechaVisita">

    <LinearLayout
        android:id="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="ID_Congregacion"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Nombre"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Seccion"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Observaciones"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerDatosCongregaciones"
        android:layout_alignBottom="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>