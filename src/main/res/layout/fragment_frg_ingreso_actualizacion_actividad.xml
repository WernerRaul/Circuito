<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.frgIngresoActualizacionActividad">

    <Spinner
        android:id="@+id/spnCongregacion7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spnPublicador7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <Spinner
        android:id="@+id/spnPublicador7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearInformacion"
        app:layout_constraintTop_toBottomOf="@+id/spnCongregacion7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />


    <LinearLayout
        android:id="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="ID"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="AÃ±o y Mes"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Ho"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Re"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Es"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Aux"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerActualizacionActividad"
        android:layout_alignBottom="@+id/linearInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>